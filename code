overflow-y: auto;
padding: 10px;
margin-bottom: 10px;
box-shadow: 0 0 10px rgba(0,0,0,0.1);
}
#userInput {
width: 75%;
padding: 10px;
border-radius: 4px;
border: 1px solid #ccc;
}
#sendButton {
padding: 10px 20px;
background-color: #007bff;
border: none;
color: white;
border-radius: 4px;
cursor: pointer;
}
#sendButton:hover {
background-color: #0056b3;
}
.bot {
color: blue;
margin: 5px 0;
}
.user {
color: green;
margin: 5px 0;
text-align: right;
}
</style>
