<body>

<h1>Talk to Our Bot!</h1>

<div id="chatbox"></div>

<input type="text" id="userInput" placeholder="Type your message...">
<button id="sendButton">Send</button>

<script>
const chatbox = document.getElementById("chatbox");
const userInput = document.getElementById("userInput");
const sendButton = document.getElementById("sendButton");

const botReplies = {
"hello": "Hi there! How can I help you today?",
"hi": "Hello! Ask me anything!",
"how are you": "I'm just a bot, but I'm doing great!",
"what's your name": "I'm your friendly website bot!",
"bye": "Goodbye! Come back anytime!",
"default": "I'm sorry, I don't understand. Can you try asking something else?"
};

function addMessage(sender, text) {
const message = document.createElement("div");
message.className = sender;
message.innerText = text;
chatbox.appendChild(message);
chatbox.scrollTop = chatbox.scrollHeight;
}

function getBotReply(input) {
input = input.toLowerCase();
return botReplies[input] || botReplies["default"];
}

sendButton.addEventListener("click", () => {
const input = userInput.value.trim();
if (input) {
addMessage("user", input);
const reply = getBotReply(input);
setTimeout(() => {
addMessage("bot", reply);
}, 500); // Small delay for more natural feeling
userInput.value = "";
}
});

userInput.addEventListener("keypress", (e) => {
if (e.key === "Enter") sendButton.click();
});
</script>

</body>
</html>
